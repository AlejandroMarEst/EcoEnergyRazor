@page
@model EcoEnergyRazor.Pages.SimulationsModel
@{
	ViewData["Title"] = "Simulations list";
}
<div class="text-center">
	<h2>Simulation List</h2>
	<table>
		<thead>
			<tr>
				<th>Type</th>
				<th>Creation Date</th>
				<th>Energy</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var simulation in Model.Simulations)
			{
				<tr>
					@if (Model.Empty)
					{
						<td>No existeix ninguna simulació</td>
					}
				<td>@simulation.GetEnergyType()</td>
				<td>@simulation.GetDate()</td>
				<td>@simulation.GetEnergy()</td>
			</tr>
		}
	</tbody>
</table>
<a asp-area="" asp-page="/SimCreator"><button type="button">Create new simulation</button></a>
</div>
